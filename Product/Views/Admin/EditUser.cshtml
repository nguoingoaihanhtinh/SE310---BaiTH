@model Product.Models.User

<div class="px-12">
    <h2 class="text-3xl">Edit User</h2>
    <form method="post" action="/Admin/EditUser/@Model.Id">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-4">
            <label for="username" class="block text-gray-700">Username</label>
            <input type="text" id="username" name="Username" value="@Model.Username" class="border border-gray-300 rounded-md w-full p-2" required>
            <span asp-validation-for="Username" class="text-red-600"></span>
        </div>

        <div class="mb-4">
            <label for="email" class="block text-gray-700">Email</label>
            <input type="email" id="email" name="Email" value="@Model.Email" class="border border-gray-300 rounded-md w-full p-2" required>
            <span asp-validation-for="Email" class="text-red-600"></span>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 text-white bg-blue-600 rounded-md">Save Changes</button>
            <a href="@Url.Action("Index", "Admin")" class="ml-2 px-4 py-2 text-gray-700 bg-gray-300 rounded-md">Cancel</a>
        </div>
    </form>
</div>
